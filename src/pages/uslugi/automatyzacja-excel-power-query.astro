---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import HeroService from "../../components/HeroService.astro";
import Contact from "../../components/Contact.astro";
import Footer from "../../components/Footer.astro";

const title = "Automatyzacja Excel i Power Query – Koniec z ręcznym raportowaniem | Raporty24";
const description = "Zautomatyzuj swoje raporty dzięki Power Query. Łączenie plików, czyszczenie danych i automatyczne odświeżanie. Oszczędzaj do 20 godzin miesięcznie!";


export const service = {
  title: "Automatyzacja Excel PowerQuery",
  order: 10,
  menu: true,
  category: "Excel", // opcjonalnie (do grupowania)
};---

<BaseLayout title={title} description={description}>
  <div x-data="app" x-cloak>
    <Header />
    
    <HeroService 
      title="Błyskawiczna" 
      highlight="Automatyzacja Raportów" 
      subtitle="Zamień godziny spędzone na kopiowaniu danych w jedno kliknięcie przycisku 'Odśwież'. Wykorzystujemy Power Query, by Twój Excel stał się niezawodny."
    />

    <section class="py-24 bg-slate-950 text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mb-16">
          <h2 class="text-4xl font-black uppercase mb-6">Uwolnij się od <span class="text-green-500">powtarzalnych zadań</span></h2>
          <p class="text-slate-400">Ręczne łączenie plików i czyszczenie danych to najczęstsza przyczyna błędów w raportach. Power Query pozwala stworzyć bezpieczny proces, który wykona te zadania za Ciebie.</p>
        </div>
        <div class="grid md:grid-cols-2 gap-12">
          <div class="flex gap-6 p-8 rounded-3xl bg-white/5 border border-white/10">
             <div class="text-4xl text-green-500"><i class="fas fa-layer-group"></i></div>
             <div>
               <h4 class="font-bold text-xl mb-2">Łączenie danych</h4>
               <p class="text-slate-400 text-sm">Automatycznie pobieramy dane z wielu plików w folderze, e-maili lub arkuszy Google.</p>
             </div>
          </div>
          <div class="flex gap-6 p-8 rounded-3xl bg-white/5 border border-white/10">
             <div class="text-4xl text-green-500"><i class="fas fa-broom"></i></div>
             <div>
               <h4 class="font-bold text-xl mb-2">Czyszczenie i Transformacja</h4>
               <p class="text-slate-400 text-sm">Usuwanie duplikatów, zmiana formatów dat i naprawianie błędów odbywa się bez Twojego udziału.</p>
             </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-24 bg-white text-slate-900">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-black uppercase mb-16">Pobieramy dane z <span class="text-green-600">każdego źródła</span></h2>
        <div class="flex flex-wrap justify-center gap-12 opacity-70 italic font-bold text-slate-400">
          <span>SYSTEMY ERP</span> <span>SQL SERVER</span> <span>PLIKI CSV/XLSX</span> <span>WYSYŁKI E-MAIL</span> <span>GOOGLE SHEETS</span>
        </div>
      </div>
    </section>

    <Contact />
    <Footer />
  </div>
</BaseLayout>