---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const categories = ['Wszystkie', ...new Set(allPosts.map((post) => post.data.category))];
const allTags = allPosts.flatMap(post => post.data.tags || []);
const tags = ['Wszystkie', ...new Set(allTags)];
---

<BaseLayout title="Blog Analityczny | Raporty24" description="Porady i wiedza o Power BI, Excelu i automatyzacji.">
  <div x-data="{ 
    selectedCategory: 'Wszystkie', 
    selectedTag: 'Wszystkie',
    isVisible(postCat, postTags) {
        const catMatch = this.selectedCategory === 'Wszystkie' || this.selectedCategory === postCat;
        const tagMatch = this.selectedTag === 'Wszystkie' || (postTags && postTags.includes(this.selectedTag));
        return catMatch && tagMatch;
    }
  }">
    <Header />
    
    <section class="pt-40 pb-24 bg-slate-950 relative overflow-hidden">
      <div class="container mx-auto px-4 relative z-10">
        <header class="max-w-4xl">
          <div class="inline-flex items-center gap-3 mb-6 px-4 py-2 rounded-full bg-green-500/10 border border-green-500/20">
            <span class="flex h-2 w-2 rounded-full bg-green-500 shadow-[0_0_10px_#22c55e]"></span>
            <span class="text-[10px] font-black uppercase tracking-[0.2em] text-green-400">Baza wiedzy</span>
          </div>
          <h1 class="text-5xl lg:text-7xl font-black tracking-tighter text-white mb-8 leading-[0.95]">
            Blog <span class="text-slate-500 italic">analityczny.</span>
          </h1>
          <p class="text-xl text-slate-400 max-w-2xl leading-relaxed">
            Praktyczne wskazówki, jak pracować mądrzej z danymi, <strong class="text-white">oszczędzać czas</strong> i wdrażać automatyzację w biznesie.
          </p>
        </header>

        <div class="mt-16 space-y-8">
          <div>
            <span class="text-[10px] font-black text-slate-600 uppercase tracking-widest block mb-4">Kategorie</span>
            <div class="flex flex-wrap gap-2">
              {categories.map(cat => (
                <button 
                  @click={`selectedCategory = '${cat}'`}
                  :class={`selectedCategory === '${cat}' ? 'bg-green-600 text-white' : 'bg-slate-900 text-slate-400 hover:bg-slate-800'`}
                  class="px-5 py-2 rounded-full font-black text-[10px] uppercase tracking-widest transition-all border border-white/5"
                >
                  {cat}
                </button>
              ))}
            </div>
          </div>
        </div>
      </div>
      <div class="absolute -bottom-1/4 -right-1/4 w-[600px] h-[600px] bg-green-500/5 rounded-full blur-[120px] -z-10"></div>
    </section>

    <main class="py-24 bg-white">
      <div class="container mx-auto px-4">
        
        <div class="mb-16 flex flex-wrap items-center gap-4 border-b border-slate-100 pb-8">
           <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Narzędzia:</span>
           <div class="flex flex-wrap gap-2">
            {tags.map(tag => (
              <button 
                @click={`selectedTag = '${tag}'`}
                :class={`selectedTag === '${tag}' ? 'bg-slate-900 text-white' : 'bg-slate-50 text-slate-500 hover:bg-slate-100'`}
                class="px-4 py-1.5 rounded-full font-bold transition-all text-[11px]"
              >
                #{tag}
              </button>
            ))}
           </div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12 max-w-7xl mx-auto">
          {allPosts.map((post) => {
            const tagsJsArray = post.data.tags ? `['${post.data.tags.join("','")}']` : '[]';
            
            return (
            <article 
              x-show={`isVisible('${post.data.category}', ${tagsJsArray})`}
              x-transition.opacity.duration.300ms
              class="group flex flex-col h-full bg-white rounded-[2.5rem] overflow-hidden border border-slate-100 hover:shadow-2xl hover:shadow-green-600/5 transition-all duration-500"
            >
              <a href={`/blog/${post.slug}`} class="block overflow-hidden aspect-[16/10] bg-slate-100 relative">
                <img 
                  src={post.data.image} 
                  alt={post.data.title}
                  class="w-full h-full object-cover transition duration-700 group-hover:scale-105"
                  loading="lazy"
                />
              </a>
              
              <div class="p-8 lg:p-10 flex flex-col flex-grow">
                <div class="flex items-center gap-4 mb-6">
                  <span class="text-[10px] font-black uppercase tracking-widest text-green-600 bg-green-50 px-3 py-1 rounded-full">
                    {post.data.category}
                  </span>
                  <span class="text-[10px] font-bold text-slate-400 uppercase">{post.data.pubDate.toLocaleDateString('pl-PL')}</span>
                </div>

                <h2 class="text-2xl font-black mb-4 text-slate-900 leading-tight group-hover:text-green-600 transition-colors uppercase tracking-tight">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h2>
                <p class="text-slate-500 text-sm leading-relaxed mb-8 line-clamp-3">{post.data.description}</p>
                
                <div class="mt-auto flex items-center justify-between border-t border-slate-50 pt-6">
                  <div class="flex gap-1">
                    {post.data.tags?.slice(0, 1).map(tag => (
                      <span class="text-[9px] font-black text-slate-400 uppercase tracking-tighter">#{tag}</span>
                    ))}
                  </div>
                  <a href={`/blog/${post.slug}`} class="text-green-600 font-black text-xs uppercase tracking-widest flex items-center gap-2 group/link">
                    Czytaj <i class="fas fa-arrow-right text-[10px] transition-transform group-hover/link:translate-x-1"></i>
                  </a>
                </div>
              </div>
            </article>
          )})}
        </div>

        <div 
            x-show="!$el.parentElement.querySelector('article:not([style*=\'display: none\'])')" 
            x-cloak
            class="text-center py-20 bg-slate-50 rounded-[2.5rem] border-2 border-dashed border-slate-200"
        >
          <div class="text-slate-300 text-4xl mb-4"><i class="fas fa-search"></i></div>
          <p class="text-slate-500 font-bold uppercase tracking-widest text-xs">Nie znaleziono artykułów. Zmień filtry.</p>
        </div>

      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>

<style>
  [x-cloak] { display: none !important; }
</style>