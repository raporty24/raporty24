---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const categories = ['Wszystkie', ...new Set(allPosts.map((post) => post.data.category))];
const allTags = allPosts.flatMap(post => post.data.tags || []);
const tags = ['Wszystkie', ...new Set(allTags)];
---

<BaseLayout title="Blog Analityczny | Raporty24" description="Porady i wiedza o Power BI, Excelu i automatyzacji.">
  <div x-data="{ 
    selectedCategory: 'Wszystkie', 
    selectedTag: 'Wszystkie'
  }">
    <Header />
    
    <section class="pt-44 pb-32 bg-slate-950 relative overflow-hidden rounded-b-[3rem] lg:rounded-b-[5rem] z-20 shadow-2xl">
      
      <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-green-500/10 rounded-full blur-[120px] -z-10"></div>

      <div class="container mx-auto px-4 relative z-10">
        <header class="max-w-4xl">
          <div class="inline-flex items-center gap-3 mb-8 px-4 py-2 rounded-full bg-green-500/10 border border-green-500/30">
            <span class="flex h-2 w-2 rounded-full bg-green-500 shadow-[0_0_10px_#22c55e]"></span>
            <span class="text-[10px] font-black uppercase tracking-[0.2em] text-green-400">Knowledge Base</span>
          </div>
          
          <h1 class="text-6xl lg:text-8xl font-black tracking-tighter text-white mb-8 leading-[0.9]">
            Blog <span class="text-green-500 italic">analityczny.</span>
          </h1>
          
          <p class="text-xl text-slate-300 max-w-2xl leading-relaxed font-medium">
            Praktyczne wskazówki, jak pracować mądrzej z danymi i wdrażać automatyzację, która <span class="text-white">oszczędza Twój czas.</span>
          </p>
        </header>

        <div class="mt-16">
          <span class="text-[10px] font-black text-slate-500 uppercase tracking-[0.3em] block mb-6">Wybierz kategorię:</span>
          <div class="flex flex-wrap gap-3">
            {categories.map(cat => (
              <button 
                @click={`selectedCategory = '${cat}'`}
                :class={`selectedCategory === '${cat}' 
                  ? 'bg-green-600 text-white border-green-500 shadow-lg shadow-green-600/40' 
                  : 'bg-slate-900 text-slate-200 border-white/20 hover:border-green-500/50 hover:text-white'`}
                class="px-8 py-3 rounded-full font-black text-[11px] uppercase tracking-widest transition-all border cursor-pointer"
              >
                {cat}
              </button>
            ))}
          </div>
        </div>
      </div>
    </section>

    <main class="py-24 bg-slate-50 relative z-10 -mt-12 lg:-mt-20">
      <div class="container mx-auto px-4">
        
        <div class="mb-16 flex flex-wrap items-center gap-6 bg-white p-6 rounded-[2.5rem] border border-slate-200 shadow-sm">
           <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Technologie:</span>
           <div class="flex flex-wrap gap-2">
            {tags.map(tag => (
              <button 
                @click={`selectedTag = '${tag}'`}
                :class={`selectedTag === '${tag}' ? 'bg-slate-900 text-white shadow-lg' : 'bg-slate-100 text-slate-500 hover:bg-slate-200'`}
                class="px-4 py-1.5 rounded-full font-bold transition-all text-[11px] cursor-pointer"
              >
                #{tag}
              </button>
            ))}
           </div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
          {allPosts.map((post) => {
            const postTags = JSON.stringify(post.data.tags || []);
            return (
              <article 
                x-show={`(selectedCategory === 'Wszystkie' || selectedCategory === '${post.data.category}') && (selectedTag === 'Wszystkie' || ${postTags}.includes(selectedTag))`}
                class="group flex flex-col h-full bg-white rounded-[2.5rem] overflow-hidden border border-slate-200 hover:border-green-500/30 hover:shadow-2xl hover:shadow-green-900/5 transition-all duration-500"
              >
                <a href={`/blog/${post.slug}`} class="block overflow-hidden aspect-[16/10] bg-slate-100 relative">
                  <img src={post.data.image} alt={post.data.title} class="w-full h-full object-cover transition duration-700 group-hover:scale-110" loading="lazy" />
                  <div class="absolute inset-0 bg-gradient-to-t from-slate-900/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                </a>
                
                <div class="p-8 lg:p-10 flex flex-col flex-grow">
                  <div class="flex items-center gap-4 mb-6">
                    <span class="text-[9px] font-black uppercase tracking-[0.2em] text-green-600 bg-green-50 px-3 py-1 rounded-lg border border-green-100">
                      {post.data.category}
                    </span>
                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">{post.data.pubDate.toLocaleDateString('pl-PL')}</span>
                  </div>

                  <h2 class="text-2xl font-black mb-4 text-slate-900 leading-tight group-hover:text-green-600 transition-colors uppercase tracking-tight">
                    <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                  </h2>
                  <p class="text-slate-500 text-sm leading-relaxed mb-8 line-clamp-3">
                    {post.data.description}
                  </p>
                  
                  <div class="mt-auto flex items-center justify-between border-t border-slate-50 pt-6">
                    <div class="flex gap-1">
                      {post.data.tags?.slice(0, 1).map(tag => (
                        <span class="text-[10px] font-bold text-slate-400">#{tag}</span>
                      ))}
                    </div>
                    <a href={`/blog/${post.slug}`} class="text-green-600 font-black text-xs uppercase tracking-[0.2em] flex items-center gap-2 group/link">
                      Czytaj <i class="fas fa-arrow-right text-[10px] transition-transform group-hover/link:translate-x-1"></i>
                    </a>
                  </div>
                </div>
              </article>
            );
          })}
        </div>

      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>

<style>
  [x-cloak] { display: none !important; }
  h1 { text-wrap: balance; }
</style>