---
import "../styles/global.css";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

       <script async src="https://www.googletagmanager.com/gtag/js?id=G-B6RVGF640J"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
  gtag('config', 'G-B6RVGF640J');
    </script>

    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href="https://raporty24.pl/" />

    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:url" content="https://raporty24.pl/" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://raporty24.pl/og-image.png" />

    <script defer src="/scripts/site.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  </head>

  <body class="bg-white antialiased">
    <slot />
  </body>
</html>


