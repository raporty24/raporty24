// Je≈õli np. w src/components/ui/ to zmie≈Ñ na "../../pages/uslugi/*.astro"
const modules = import.meta.glob("../pages/uslugi/*.astro", { eager: true });

const TITLE_MAP = {
  "arkusze-kalkulacyjne-za-zamowienie": "Arkusze kalkulacyjne na zam√≥wienie",
  "automatyzacja-excel-power-query": "Automatyzacja Excel (Power Query)",
  "baza-klientow-w-excelu": "Baza klient√≥w w Excelu",
  "crm-w-excelu": "CRM w Excelu",
  "dashboardy-power-bi": "Dashboardy Power BI",
  "excel-na-zamowienie": "Excel na zam√≥wienie",
  "lejek-sprzedazy-w-excelu": "Lejek sprzeda≈ºy w Excelu",
  "makra-vba": "Makra VBA",
  "optymalizacja-dax-power-bi": "Optymalizacja DAX (Power BI)",
  "optymalizacja-excela": "Optymalizacja Excela",
  "pobieranie-emaili-do-excela": "Pobieranie e-maili do Excela",
  "power-bi-dla-firm": "Power BI dla firm",
  "raporty-miesieczne-automatyczne": "Raporty miesiƒôczne automatyczne",
  "raporty-power-bi": "Raporty Power BI",
  "raporty-serwisowe": "Raporty serwisowe",
  "wizualizacja-danych-power-bi": "Wizualizacja danych (Power BI)",
};

function fileToSlug(filePath: string) {
  return filePath.split("/").pop()?.replace(".astro", "") ?? "";
}

function fallbackTitle(slug: string) {
  return slug
    .split("-")
    .map((w) => (w.length ? w[0].toUpperCase() + w.slice(1) : w))
    .join(" ");
}

// Lista us≈Çug do dropdowna
const services = Object.keys(modules)
  .map((file) => {
    const slug = fileToSlug(file);
    if (!slug || slug === "index") return null;
    return {
      slug,
      href: `/uslugi/${slug}`,
      title: TITLE_MAP[slug] ?? fallbackTitle(slug),
    };
  })
  .filter(Boolean)
  .sort((a, b) => a!.title.localeCompare(b!.title, "pl"));
