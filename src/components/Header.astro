---
// Header.astro - Wersja UX Pro (2 kolumny, bez "uciekania" myszki)
const modules = import.meta.glob("../pages/uslugi/*.astro", { eager: true });

const TITLE_MAP = {
  "arkusze-kalkulacyjne-za-zamowienie": "Arkusze na zamówienie",
  "automatyzacja-excel-power-query": "Automatyzacja Power Query",
  "baza-klientow-w-excelu": "Baza klientów",
  "crm-w-excelu": "System CRM",
  "dashboardy-power-bi": "Dashboardy Power BI",
  "excel-na-zamowienie": "Excel na zamówienie",
  "lejek-sprzedazy-w-excelu": "Lejek sprzedaży",
  "makra-vba": "Makra VBA",
  "optymalizacja-dax-power-bi": "Optymalizacja DAX",
  "optymalizacja-excela": "Optymalizacja Excela",
  "pobieranie-emaili-do-excela": "Import z e-maili",
  "power-bi-dla-firm": "Wdrożenia Power BI",
  "raporty-miesieczne-automatyczne": "Raporty miesięczne",
  "raporty-power-bi": "Analityka Power BI",
  "raporty-serwisowe": "Raporty serwisowe",
  "wizualizacja-danych-power-bi": "Wizualizacja danych",
};

function fileToSlug(filePath: string) {
  return filePath.split("/").pop()?.replace(".astro", "") ?? "";
}

const services = Object.keys(modules)
  .map((file) => {
    const slug = fileToSlug(file);
    if (!slug || slug === "index") return null;
    return {
      slug,
      href: `/uslugi/${slug}`,
      title: TITLE_MAP[slug] ?? slug.replace(/-/g, " "),
    };
  })
  .filter(Boolean)
  .sort((a, b) => a!.title.localeCompare(b!.title, "pl"));
---

<header 
  class="fixed top-0 w-full z-50 border-b border-slate-200/60 bg-white/90 backdrop-blur-xl"
  x-data="{ menuOpen: false, servicesOpen: false }"
>
  <nav class="container mx-auto px-4 py-3 lg:py-4 flex justify-between items-center">
    <a href="/#hero" class="flex items-center gap-2 group transition-transform hover:scale-105">
      <img src="/logos.webp" alt="Raporty24" width="160" height="40" class="w-32 md:w-40" />
    </a>

    <div class="hidden xl:flex items-center gap-1" id="desktop-menu">
      
      <div class="relative group" @mouseenter="servicesOpen = true" @mouseleave="servicesOpen = false">
        <a href="/uslugi/" class="nav-link flex items-center gap-1 group-hover:text-green-600 transition-colors">
          Usługi
          <i class="fas fa-chevron-down text-[8px] transition-transform group-hover:rotate-180"></i>
        </a>

        <div 
          x-show="servicesOpen" 
          x-cloak
          x-transition:enter="transition ease-out duration-200"
          x-transition:enter-start="opacity-0 translate-y-2"
          x-transition:enter-end="opacity-100 translate-y-0"
          class="absolute top-full left-1/2 -translate-x-1/2 pt-4 w-[550px]" 
        >
          <div class="bg-white border border-slate-100 shadow-2xl rounded-3xl p-6 grid grid-cols-2 gap-x-8 gap-y-2">
            <a href="/uslugi/" class="col-span-2 dropdown-link border-b border-slate-50 mb-2 pb-2 text-green-600 font-black">
              Wszystkie usługi <i class="fas fa-arrow-right ml-2 text-[8px]"></i>
            </a>
            {services.map((s) => (
              <a href={s!.href} class="dropdown-link whitespace-nowrap">{s!.title}</a>
            ))}
          </div>
        </div>
      </div>

      <a href="/#technologie" class="nav-link">Technologie</a>
      <a href="/#cennik" class="nav-link">Cennik</a>
      <a href="/#kontakt" class="nav-link">Kontakt</a>

      <div class="ml-6 flex items-center gap-3 border-l border-slate-200 pl-6">
        <a href="/blog/" class="green-btn-menu">Blog</a>
      </div>
    </div>

    <button class="xl:hidden p-2 rounded-xl bg-slate-50 border border-slate-100" @click="menuOpen = !menuOpen">
      <i class="fas fa-bars text-green-700 text-xl" x-show="!menuOpen"></i>
      <i class="fas fa-times text-slate-500 text-xl" x-show="menuOpen" x-cloak></i>
    </button>
  </nav>

  <div 
    class="fixed inset-x-0 top-[64px] bg-white border-t border-slate-100 shadow-2xl xl:hidden overflow-y-auto max-h-[calc(100vh-64px)]" 
    x-show="menuOpen" 
    x-cloak 
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 -translate-y-4"
    x-transition:enter-end="opacity-100 translate-y-0"
  >
    <nav class="flex flex-col p-6 space-y-1 text-center">
      <div x-data="{ subMenuOpen: false }">
        <button @click="subMenuOpen = !subMenuOpen" class="mobile-nav-link w-full flex justify-between items-center text-green-600">
          Zakres usług
          <i class="fas fa-chevron-down transition-transform" :class="subMenuOpen ? 'rotate-180' : ''"></i>
        </button>

        <div x-show="subMenuOpen" class="bg-slate-50 rounded-2xl my-2 grid grid-cols-1 py-2">
          <a href="/uslugi/" class="mobile-nav-sublink font-black text-green-600">Wszystkie usługi</a>
          {services.map((s) => (
            <a href={s!.href} class="mobile-nav-sublink" @click="menuOpen=false">{s!.title}</a>
          ))}
        </div>
      </div>

      <a href="/#technologie" class="mobile-nav-link" @click="menuOpen=false">Technologie</a>
      <a href="/#cennik" class="mobile-nav-link" @click="menuOpen=false">Cennik</a>
      <a href="/#kontakt" class="mobile-nav-link font-black" @click="menuOpen=false">Kontakt</a>
    </nav>
  </div>
</header>

<style>
  @reference "../styles/global.css";

  [x-cloak] { display: none !important; }

  .nav-link {
    @apply px-4 py-2 text-[11px] font-black uppercase tracking-widest text-slate-500 hover:text-green-600 transition-all;
  }

  .dropdown-link {
    @apply px-3 py-2 text-[10px] font-bold uppercase tracking-wider text-slate-600 hover:text-green-600 hover:bg-green-50/50 rounded-xl transition-all;
  }

  .mobile-nav-link {
    @apply py-4 text-sm font-bold text-slate-600 border-b border-slate-50 flex items-center justify-center hover:text-green-600 transition-colors;
  }

  .mobile-nav-sublink {
    @apply block py-3 px-6 text-xs font-bold text-slate-500 hover:text-green-600 transition-colors;
  }

  .green-btn-menu {
    @apply bg-green-600 text-white px-8 py-3 rounded-full text-[10px] font-black uppercase tracking-widest hover:bg-green-500 shadow-lg shadow-green-600/20 transition-all;
  }
</style>