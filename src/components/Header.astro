<style>
  @reference "../styles/global.css";

  [x-cloak] { display: none !important; }

  /* Desktop Links */
  .nav-link {
    @apply px-3 py-2 text-[11px] font-black uppercase tracking-widest text-slate-500 hover:text-green-600 transition-all relative;
  }

  .nav-link.active {
    @apply text-green-600 font-black;
  }

  .nav-link.active::after {
    content: '';
    @apply absolute bottom-0 left-3 right-3 h-0.5 bg-green-600 rounded-full;
  }

  /* Dropdown link (tylko do nowego dropdowna us≈Çug) */
