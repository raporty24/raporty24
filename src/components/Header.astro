---
// Header.astro
---

<header 
  class="fixed top-0 w-full z-50 border-b border-slate-200/60 bg-white/80 backdrop-blur-md"
  x-data="{ menuOpen: false }"
>
  <nav class="container mx-auto px-4 py-3 md:py-4 flex justify-between items-center">
    <a href="/#hero" class="flex items-center gap-2 group transition-transform hover:scale-105">
      <img src="/logos.webp" alt="Raporty24" width="160" height="40" class="w-32 md:w-40" />
    </a>

    <div class="hidden md:flex items-center gap-1 font-medium" id="desktop-menu">
      <a href="/#oferta" class="nav-link" data-section="oferta">Zakres usug</a>
      <a href="/#technologie" class="nav-link" data-section="technologie">Technologie</a>
      <a href="/#cennik" class="nav-link" data-section="cennik">Cennik</a>
      <a href="/#abonament" class="nav-link" data-section="abonament">Subskrypcja</a>
      <a href="/#dlaczego" class="nav-link" data-section="dlaczego">Dlaczego my?</a>
      <a href="/#kontakt" class="nav-link" data-section="kontakt">Kontakt</a>

      <div class="ml-4 flex items-center gap-2 border-l border-slate-200 pl-4">
        <a href="/#demo-section" class="navy-btn-menu" data-section="demo-section">Demo</a>
        
        <a href="/blog/" class="green-btn-menu">Blog</a>
        
        <a href="https://www.tiktok.com/@raporty24" target="_blank" class="text-slate-400 hover:text-[#ff0050] transition-colors ml-2 text-lg">
          <i class="fab fa-tiktok"></i>
        </a>
      </div>
    </div>

    <button class="md:hidden p-2" @click="menuOpen = !menuOpen">
      <i class="fas fa-bars text-green-700 text-2xl" x-show="!menuOpen"></i>
      <i class="fas fa-times text-slate-500 text-2xl" x-show="menuOpen" x-cloak></i>
    </button>
  </nav>

  <div class="bg-white border-t border-slate-100 md:hidden" x-show="menuOpen" x-cloak x-transition>
    <nav class="flex flex-col p-4 space-y-2 text-center text-slate-700">
      <a href="/#oferta" class="py-2" @click="menuOpen=false">Zakres usug</a>
      <a href="/#cennik" class="py-2" @click="menuOpen=false">Cennik</a>
      <a href="/#demo-section" class="py-2 font-bold text-[#243356]" @click="menuOpen=false">Demo</a>
      <a href="/blog/" class="py-2 text-green-600 font-bold" @click="menuOpen=false">Blog</a>
      <a href="/#kontakt" class="bg-green-600 text-white py-3 rounded-xl font-bold mt-2" @click="menuOpen=false">Bezpatny Audyt</a>
    </nav>
  </div>
</header>

<a 
  href="https://www.tiktok.com/@raporty24" 
  target="_blank" 
  class="fixed bottom-6 right-6 z-[60] flex items-center justify-center w-14 h-14 bg-black text-white rounded-full shadow-2xl hover:scale-110 hover:rotate-6 transition-all duration-300 group"
>
  <i class="fab fa-tiktok text-2xl group-hover:text-[#ff0050] transition-colors"></i>
  <span class="absolute right-16 bg-white text-black text-[10px] font-bold px-3 py-1 rounded-lg shadow-md border border-slate-100 opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none">
    Triki w 60 sekund! 
  </span>
</a>

<style>
  /* NAPRAWA BDU: cie偶ka do styl贸w (sprawd藕 czy masz jedn czy dwie kropki) */
  @reference "../styles/global.css";

  [x-cloak] { display: none !important; }

  .nav-link {
    @apply px-3 py-2 text-sm text-slate-500 hover:text-green-600 transition-all relative;
  }

  /* Styl dla AKTYWNEGO przycisku w menu */
  .nav-link.active, .navy-btn-menu.active {
    @apply text-green-600 font-extrabold;
  }

  .nav-link.active::after {
    content: '';
    @apply absolute bottom-0 left-3 right-3 h-0.5 bg-green-600 rounded-full;
  }

  /* Styl przycisk贸w */
  .navy-btn-menu {
    @apply bg-[#243356] text-white px-5 py-2 rounded-full text-sm font-bold hover:bg-[#1d2946] transition-all;
  }

  .green-btn-menu {
    @apply bg-green-600 text-white px-5 py-2 rounded-full text-sm font-bold hover:bg-green-700 shadow-md shadow-green-600/20 transition-all;
  }
</style>

<script>
  function setupScrollSpy() {
    const sections = ['hero', 'oferta', 'technologie', 'cennik', 'abonament', 'dlaczego', 'kontakt', 'demo-section'];
    const navLinks = document.querySelectorAll('.nav-link, .navy-btn-menu');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.getAttribute('id');
          navLinks.forEach(link => {
            // Sprawdzamy czy data-section pasuje do ID sekcji
            if (link.getAttribute('data-section') === id) {
              link.classList.add('active');
            } else {
              link.classList.remove('active');
            }
          });
        }
      });
    }, { 
      rootMargin: '-20% 0px -70% 0px', // Aktywuje si, gdy sekcja zajmuje g贸r ekranu
      threshold: 0 
    });

    sections.forEach(id => {
      const section = document.getElementById(id);
      if (section) observer.observe(section);
    });
  }

  // Obsuga Astro (zar贸wno zwyke adowanie jak i View Transitions)
  document.addEventListener('astro:page-load', setupScrollSpy);
  setupScrollSpy();
</script>