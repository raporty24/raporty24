<style>
  @reference "../styles/global.css";
  [x-cloak] { display: none !important; }

  .nav-link {
    @apply px-3 py-2 text-[11px] font-black uppercase tracking-widest text-slate-500 hover:text-green-600 transition-all relative;
  }
  .nav-link.active::after {
    content: '';
    @apply absolute bottom-0 left-3 right-3 h-0.5 bg-green-600 rounded-full;
  }
  .dropdown-link {
    @apply px-4 py-2 text-[10px] font-bold uppercase tracking-wider text-slate-600 hover:text-green-600 hover:bg-green-50/50 rounded-xl transition-all;
  }
  .mobile-nav-link {
    @apply py-4 text-sm font-bold text-slate-600 border-b border-slate-50 flex items-center justify-center hover:text-green-600;
  }
  .mobile-nav-sublink {
    @apply block py-3 px-6 text-xs font-bold text-slate-500 hover:text-green-600;
  }
  .navy-btn-menu {
    @apply bg-slate-900 text-white px-6 py-2.5 rounded-full text-[10px] font-black uppercase tracking-widest hover:bg-slate-800 transition-all;
  }
  .green-btn-menu {
    @apply bg-green-600 text-white px-6 py-2.5 rounded-full text-[10px] font-black uppercase tracking-widest hover:bg-green-500 transition-all;
  }
</style>

<script>
  function setupScrollSpy() {
    const sections = ['hero', 'oferta', 'technologie', 'cennik', 'abonament', 'dlaczego', 'kontakt', 'demo-section'];
    const navLinks = document.querySelectorAll('.nav-link, .navy-btn-menu');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.getAttribute('id');
          navLinks.forEach(link => {
            if (link.getAttribute('data-section') === id) {
              link.classList.add('active');
            } else {
              link.classList.remove('active');
            }
          });
        }
      });
    }, { rootMargin: '-20% 0px -70% 0px', threshold: 0 });

    sections.forEach(id => {
      const section = document.getElementById(id);
      if (section) observer.observe(section);
    });
  }
  document.addEventListener('astro:page-load', setupScrollSpy);
  setupScrollSpy();
</script>