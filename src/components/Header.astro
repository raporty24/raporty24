const modules = import.meta.glob("../pages/uslugi/*.astro", { eager: true });

const TITLE_MAP = {
  "arkusze-kalkulacyjne-za-zamowienie": "Arkusze na zam贸wienie",
  "automatyzacja-excel-power-query": "Automatyzacja Power Query",
  "baza-klientow-w-excelu": "Baza klient贸w",
  "crm-w-excelu": "System CRM",
  "dashboardy-power-bi": "Dashboardy Power BI",
  "excel-na-zamowienie": "Excel na zam贸wienie",
  "lejek-sprzedazy-w-excelu": "Lejek sprzeda偶y",
  "makra-vba": "Makra VBA",
  "optymalizacja-dax-power-bi": "Optymalizacja DAX",
  "optymalizacja-excela": "Optymalizacja Excela",
  "pobieranie-emaili-do-excela": "Import z e-maili",
  "power-bi-dla-firm": "Wdro偶enia Power BI",
  "raporty-miesieczne-automatyczne": "Raporty miesiczne",
  "raporty-power-bi": "Analityka Power BI",
  "raporty-serwisowe": "Raporty serwisowe",
  "wizualizacja-danych-power-bi": "Wizualizacja danych",
};

function fileToSlug(filePath: string) {
  return filePath.split("/").pop()?.replace(".astro", "") ?? "";
}

const services = Object.keys(modules)
  .map((file) => {
    const slug = fileToSlug(file);
    if (!slug || slug === "index") return null;
    return {
      slug,
      href: `/uslugi/${slug}`,
      title: TITLE_MAP[slug] ?? slug.replace(/-/g, " "),
    };
  })
  .filter(Boolean)
  .sort((a, b) => a!.title.localeCompare(b!.title, "pl"));
