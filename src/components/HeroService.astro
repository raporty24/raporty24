---
// HeroService.astro - Nowoczesny styl usługowy (Jasny)
const { title, highlight, subtitle } = Astro.props;
---

<section class="relative min-h-[70vh] flex items-center overflow-hidden bg-slate-50 border-b border-slate-200">
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#0f172a08_1px,transparent_1px),linear-gradient(to_bottom,#0f172a08_1px,transparent_1px)] bg-[size:40px_40px]"></div>
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-green-500/5 rounded-full blur-[120px]"></div>
  </div>

  <div class="absolute inset-0 z-0 pointer-events-none opacity-60" aria-hidden="true">
    <svg class="w-full h-full" preserveAspectRatio="none" viewBox="0 0 1440 800">
      <path d="M-100,650 L400,400 L700,580 L1100,280 L1540,480" fill="none" stroke="#cbd5e1" stroke-width="1" />
      <path class="neon-flow-light" d="M-100,650 L400,400 L700,580 L1100,280 L1540,480" fill="none" stroke="#16a34a" stroke-width="3" stroke-linecap="round" />
    </svg>
  </div>

  <div class="container mx-auto px-4 relative z-10 py-20">
    <div class="max-w-4xl">
      <div class="inline-flex items-center gap-3 mb-6 px-4 py-2 rounded-full bg-white border border-slate-200 shadow-sm">
        <span class="flex h-2 w-2 rounded-full bg-green-500"></span>
        <span class="text-xs font-bold uppercase tracking-widest text-slate-500">Usługi Raporty24</span>
      </div>
      <h1 class="text-5xl lg:text-7xl font-black text-slate-900 tracking-tighter mb-6 leading-none">
        {title} <br/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-green-800">{highlight}</span>
      </h1>
      <p class="text-xl text-slate-600 mb-10 max-w-2xl leading-relaxed">{subtitle}</p>
      <a href="#kontakt" class="bg-slate-900 text-white py-4 px-10 rounded-2xl font-black text-lg hover:bg-slate-800 transition-all shadow-xl shadow-slate-900/10">Wycena w 24h</a>
    </div>
  </div>
</section>

<style>
  .neon-flow-light { stroke-dasharray: 300 1500; stroke-dashoffset: 1800; animation: flowLight 5s linear infinite; }
  @keyframes flowLight { to { stroke-dashoffset: -300; } }
</style>